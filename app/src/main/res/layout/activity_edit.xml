<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    tools:context="org.polaric.cluttr.activities.EditActivity"
    android:background="@color/md_black_1000">

    <include layout="@layout/statusspacer" />

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/edit_toolbar"
        android:background="?attr/colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <org.polaric.cluttr.editor.CropImageView
        android:id="@+id/cropImageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        custom:cropBorderLineColor="#80a0a0a0"
        custom:cropGuidelinesColor="#80a0a0a0"
        custom:cropBorderCornerColor="#80a0a0a0"
        custom:cropGuidelines="on"
        custom:cropInitialCropWindowPaddingRatio="0"/>

</LinearLayout>
